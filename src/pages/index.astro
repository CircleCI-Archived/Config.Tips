---
import { getCollection } from "astro:content";
import CodeWindow from "../components/CodeWindow/CodeWindow.astro";
import Link from "../components/Link.astro";
import Layout from "../layouts/Layout.astro";
import Card from "../components/UI/Card.astro";

const exampleSnippet = `
# Your favorite developer configs
# +-----------------------------+
# |                             |
# |  Config.Tips                |
# |                             |
# |  Submit your tip 🕵️‍♂️         |
# |  Share or snag!             |
# |                             |
# +-----------------------------+
`;

const configKinds = await getCollection("configKinds");
const allTips = await getCollection("tips");

const getTopConfigKinds = (count: number) => {
  const countedConfigKinds = configKinds.map((configKind) => {
    const tips = allTips.filter((tip) => tip.data.kind.id === configKind.id);
    return {
      ...configKind,
      count: tips.length,
    };
  });
  return countedConfigKinds.sort((a, b) => b.count - a.count).slice(0, count);
};

const topConfigKinds = getTopConfigKinds(6);
---

<Layout title="Config.Tips - Home" slug="/">
  <header class="flex mt-2 mb-4 flex-row gap-6">
    <section>
      <h1
        class="gradient-text bg-gradient-to-r from-purple-500 to-red-500 font-black text-6xl"
      >
        Open-Source Config Tips
      </h1>
      <p>
        An open-source collection of useful snippets and tips for your favorite
        developer configs.
      </p>
      <p class="text-xs py-1 text-gray-400">
        Made by <Link href="https://continuouslabs.circleci.com/">ContinuousLabs</Link> with ♥, from <Link href="https://circleci.com/">CircleCI</Link>.
      </p>
      <div class="flex flex-row py-2 gap-2">
        <Link href="github.com" class="text-indigo-300 px-2 py-1 rounded border border-indigo-300">
        Submit a tip
      </Link>
      <Link href="github.com" class="text-pink-200 px-2 py-1 rounded border border-pink-200">
        Explore
      </Link>
      </div>
    </section>
    <section>
      <CodeWindow lang="yaml" snippet={exampleSnippet} filePath="config.tips" />
    </section>
  </header>
  <section>
    <form>
      <input
        type="text"
        placeholder="Search for a tip (ex: 'package.json' or 'circleci test splitting')"
        class="border-2 border-indigo-300 bg-gray-950 w-full rounded-md p-2"
      />
    </form>
    <div class="my-4 grid grid-cols-1 md:grid-cols-2 gap-4">
      {topConfigKinds.map((configKind) => (
        <Card href={`/c/${configKind.id}/`} cardBody={configKind.data.name} icon={configKind.data.logo} className="w-full shadow bg-zinc-800 border border-zinc-700 rounded p-2 hover:bg-indigo-300 hover:text-gray-900 text-gray-300" />
      ))
      }
    </div>
  </section>
</Layout>
