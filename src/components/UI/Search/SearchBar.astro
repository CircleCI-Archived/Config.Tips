---
import AutoComplete from './AutoComplete';

---
<AutoComplete client:only />

<style is:global>
  .aa-Form, .aa-DetachedFormContainer, .aa-DetachedOverlay, .aa-DetachedContainer {
    @apply bg-zinc-900
  }
  .aa-Input {
    @apply bg-zinc-900 text-gray-500 
  }
  .aa-Input::placeholder {
    @apply  text-gray-600 
  }

  .aa-ItemIcon {
    @apply w-8 h-8 p-0 shadow-none bg-transparent
  }

  .aa-ItemIcon > img {
    @apply w-full h-full p-0 border-none invert opacity-80
  }

  .aa-Panel {
    @apply bg-zinc-900 rounded-md border border-indigo-600
  }

  .aa-PanelLayout {
    @apply bg-zinc-900 border border-indigo-600 rounded-md
  }
  .aa-Item {
    @apply border-b border-gray-800
  }
  .aa-ItemContent {
    @apply py-4
  }
  .aa-ItemContentTitle {
    @apply font-bold text-indigo-600 bg-none text-lg
  }

  .aa-ItemContent mark {
    @apply text-yellow-200
  }
  .aa-DetachedCancelButton {
    @apply text-gray-500 border-gray-500
  }
  .aa-GradientBottom {
    @apply hidden
  }
</style>